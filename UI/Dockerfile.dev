# Development Dockerfile for Angular frontend
FROM node:22-alpine

WORKDIR /app

# Copy package files
COPY UI/package*.json ./
RUN npm ci

# Copy source code
COPY UI/ .

# Expose Angular dev server port
EXPOSE 4200

# Start Angular development server with hot reload
CMD ["npm", "run", "start", "--", "--host", "0.0.0.0", "--port", "4200"]
